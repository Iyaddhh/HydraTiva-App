<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".notifikasi">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header Setting -->
            <androidx.cardview.widget.CardView
                android:id="@+id/header_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="28dp"
                android:layout_marginTop="-30dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:background="@drawable/green_bg">

                        <ImageView
                            android:id="@+id/imageview2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:src="@drawable/daun"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.924"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/greetingText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Selamat pagi,"
                            android:textColor="@android:color/white"
                            android:textSize="16sp"
                            android:fontFamily="@font/poppins"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="60dp" />

                        <TextView
                            android:id="@+id/usernameText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tegar Santoso"
                            android:textColor="@android:color/white"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/poppins"
                            app:layout_constraintStart_toStartOf="@id/greetingText"
                            app:layout_constraintTop_toBottomOf="@id/greetingText" />

                        <ImageView
                            android:id="@+id/circleImage"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_marginEnd="40dp"
                            android:src="@drawable/circle_bg"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.728" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                android:backgroundTint="@color/white">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">

                    <!-- Judul Notifikasi -->
                    <TextView
                        android:id="@+id/titleText1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_bold"
                        android:text="Sapi 3 Pada Kandang 1 Terindikasi Mastitis!"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:layout_marginStart="10dp"
                        app:layout_constraintEnd_toStartOf="@+id/timeText1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- Teks Deskripsi -->
                    <TextView
                        android:id="@+id/descriptionText1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/poppins"
                        android:layout_marginStart="10dp"
                        android:maxLines="3"
                        android:text="Segera periksa sapi kamu pada kandang 1 untuk memastikan bahwa sapi tidak terkena mastitis..."
                        android:textColor="@color/grey"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="@+id/titleText1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/titleText1" />

                    <!-- Waktu -->
                    <TextView
                        android:id="@+id/timeText1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="07.55"
                        android:textSize="12sp"
                        android:textColor="@color/grey"
                        android:fontFamily="@font/poppins"
                        app:layout_constraintTop_toTopOf="@id/titleText1"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <!-- Titik Notifikasi Belum Dibaca -->
                    <View
                        android:id="@+id/unreadDot1"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="4dp"
                        android:background="@drawable/dot_tablayout"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/descriptionText1" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>




            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                android:backgroundTint="@color/white">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">

                    <!-- Tanggal -->
                    <TextView
                        android:id="@+id/dateText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Kamis, 23 Mei 2024"
                        android:textSize="16sp"
                        android:textColor="@color/primary"
                        android:fontFamily="@font/poppins_bold"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/timeText" />

                    <!-- Waktu -->
                    <TextView
                        android:id="@+id/timeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="07.30"
                        android:textSize="12sp"
                        android:textColor="@color/grey"
                        android:fontFamily="@font/poppins"
                        app:layout_constraintTop_toTopOf="@id/dateText"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <!-- Informasi Moisture -->
                    <TextView
                        android:id="@+id/moistureLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Moisture"
                        android:textSize="14sp"
                        android:textColor="@color/primary"
                        android:fontFamily="@font/poppins_bold"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@id/dateText"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/moistureStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_notifikasi"
                        android:fontFamily="@font/poppins"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="2dp"
                        android:text="Normal"
                        android:textColor="@color/grey"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="@+id/moistureLabel"
                        app:layout_constraintStart_toStartOf="@+id/moistureLabel"
                        app:layout_constraintTop_toBottomOf="@id/moistureLabel" />

                    <!-- Informasi Status -->
                    <TextView
                        android:id="@+id/statusLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_bold"
                        android:text="Status"
                        android:layout_marginStart="45dp"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/primary"
                        android:textSize="14sp"
                        app:layout_constraintStart_toEndOf="@+id/moistureLabel"
                        app:layout_constraintTop_toBottomOf="@+id/dateText" />

                    <TextView
                        android:id="@+id/statusValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_notifikasi"
                        android:fontFamily="@font/poppins"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="2dp"
                        android:text="Sudah disiram"
                        android:textColor="@color/grey"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="@+id/statusLabel"
                        app:layout_constraintStart_toStartOf="@+id/statusLabel"
                        app:layout_constraintTop_toBottomOf="@+id/statusLabel" />

                    <!-- Informasi Kadar Tanah -->
                    <TextView
                        android:id="@+id/soilPhLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_bold"
                        android:text="Kadar Tanah"
                        android:layout_marginStart="45dp"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/primary"
                        android:textSize="14sp"
                        app:layout_constraintStart_toEndOf="@+id/statusLabel"
                        app:layout_constraintTop_toBottomOf="@+id/dateText" />

                    <TextView
                        android:id="@+id/soilPhValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_notifikasi"
                        android:fontFamily="@font/poppins"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="2dp"
                        android:text="7pH"
                        android:textColor="@color/grey"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="@+id/soilPhLabel"
                        app:layout_constraintStart_toStartOf="@+id/soilPhLabel"
                        app:layout_constraintTop_toBottomOf="@+id/soilPhLabel" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>






            <!-- Notification Card 2 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                android:backgroundTint="@color/white">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <!-- Judul Notifikasi -->
                    <TextView
                        android:id="@+id/titleText2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_bold"
                        android:text="Periksa Sapi Kamu Sekarang..."
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toStartOf="@+id/timeText2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- Teks Deskripsi -->
                    <TextView
                        android:id="@+id/descriptionText2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/poppins"
                        android:maxLines="2"
                        android:text="Jangan lupa untuk tetap mengawasi dan memeriksa sapi-sapi kamu dengan Mas-Tion..."
                        android:textColor="@color/grey"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="@+id/titleText2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/titleText2" />

                    <!-- Waktu -->
                    <TextView
                        android:id="@+id/timeText2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="07.30"
                        android:layout_marginEnd="40dp"
                        android:textSize="12sp"
                        android:textColor="@color/grey"
                        android:fontFamily="@font/poppins"
                        app:layout_constraintTop_toTopOf="@id/titleText2"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <!-- Ikon Hapus -->
                    <ImageView
                        android:id="@+id/deleteIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/baseline_delete_24"
                        app:layout_constraintTop_toBottomOf="@id/timeText2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:tint="@color/red" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation View -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:itemIconSize="40dp"
        app:menu="@menu/bottom_nav_menu"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
