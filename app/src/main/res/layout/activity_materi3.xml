<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".materi2">

    <!-- CardView Header -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:backgroundTint="@color/primary"
        android:id="@+id/header_profile"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edukasi"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:textSize="20sp"
            android:fontFamily="@font/poppins"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/arrow_left"
            android:layout_marginTop="25dp"
            android:layout_marginStart="18dp" />

    </androidx.cardview.widget.CardView>

    <!-- ScrollView untuk konten artikel -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/header_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/articleContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">

            <!-- Judul Artikel -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Manfaat Stevia"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/poppins_bold" />

            <!-- Informasi Artikel -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="September 25, 2024 | Stevia"
                android:textSize="14sp"
                android:fontFamily="@font/poppins"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="4dp" />

            <!-- Gambar artikel -->
            <androidx.cardview.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardElevation="4dp"
                card_view:cardCornerRadius="14dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                card_view:cardBackgroundColor="@android:color/white">

                <ImageView
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/materi1"
                    android:scaleType="fitCenter" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sumber Artikel:"
                    android:fontFamily="@font/poppins"
                    android:textSize="14dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ners.unair.ac.id"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/grey"
                    android:layout_marginStart="5dp"
                    android:textSize="14dp" />
            </LinearLayout>

            <!-- Isi Artikel -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="a.  Pembibitan Stevia"
                android:textSize="14dp"
                android:justificationMode="inter_word"
                android:textColor="@android:color/black"
                android:layout_marginTop="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:text="Bibit stevia dapat diperoleh dari benih, stek, tunas dan kultur jaringan. Namun yang paling banyak digunakan yaitu pembibitan melalui  stek karena lebih cepat dan praktis."
                android:textSize="14dp"
                android:textColor="@android:color/black"
                android:justificationMode="inter_word"
                android:layout_marginTop="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:text="Untuk pembibitan dengan menggunakan stek, perlu diberi naungan plastik kedap udara sehingga bersuhu rendah dan kelembaban udaranya mendekati 100%. Setelah berumur 3-4 minggu, bibit stek dapat dipindah tanamkan pada lahan yang telah disiapkan"
                android:textSize="14dp"
                android:textColor="@android:color/black"
                android:justificationMode="inter_word"
                android:layout_marginTop="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="b.  Penanaman Stevia"
                android:textSize="14dp"
                android:justificationMode="inter_word"
                android:textColor="@android:color/black"
                android:layout_marginTop="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:text="Penderita diabetes diharuskan untuk mengontrol kadar gulanya agar tetap stabil. Stevia tergolong aman dikonsumsi penderita diabetes karena tidak termasuk ke dalam gula dan mengandung nol kalori."
                android:textSize="14dp"
                android:justificationMode="inter_word"
                android:textColor="@android:color/black"
                android:layout_marginTop="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="3. Dapat menurunkan tekanan darah tinggi"
                android:textSize="14dp"
                android:justificationMode="inter_word"
                android:textColor="@android:color/black"
                android:layout_marginTop="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:text="Kandungan glikosida pada stevia dapat melebarkan pembuluh darah. Selain itu, glikosida juga dapat meningkatkan pengeluaran natrium dalam tubuh. Hal tersebut dapat membantu menjaga tekanan darah agar tetap sehat."
                android:textSize="14dp"
                android:justificationMode="inter_word"
                android:textColor="@android:color/black"
                android:layout_marginTop="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="4. Memiliki potensi sebagai antikanker"
                android:textSize="14dp"
                android:justificationMode="inter_word"
                android:textColor="@android:color/black"
                android:layout_marginTop="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:text="Penelitian menunjukan bahwa Stevia yang digabungkan dengan daun blackberry memiliki potensi untuk pengobatan alami pada kanker usus."
                android:textSize="14dp"
                android:justificationMode="inter_word"
                android:textColor="@android:color/black"
                android:layout_marginTop="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="5. Tidak menyebabkan karies gigi"
                android:textSize="14dp"
                android:justificationMode="inter_word"
                android:textColor="@android:color/black"
                android:layout_marginTop="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:justificationMode="inter_word"
                android:text="Konsumsi gula tambahan dapat menyebabkan karies atau kerusakan pada gigi. Stevia dapat menjadi alternatif pemanis yang ramah untuk kesehatan gigi agar tiddak mengalami risiko karies gigi."
                android:textSize="14dp"
                android:textColor="@android:color/black"
                android:layout_marginTop="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="Efek Samping"
                android:textSize="14dp"
                android:justificationMode="inter_word"
                android:textColor="@android:color/black"
                android:layout_marginTop="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:text="Stevia diketahui memiliki berbagai manfaat. Akan tetapi, konsumsi Stevia harus secukupnya dan hindari konsumsi yang berlebihan. Reaksi setiap orang akan berbeda-beda ketika mengonsumsi Stevia. Pada beberapa orang dengan saluran pencernaan sensitif akan merasakan efek samping. Kandungan sorbitol stevia akan menimbulkan efek samping, seperti kembung, mual, dan diare."
                android:textSize="14dp"
                android:layout_marginBottom="20dp"
                android:justificationMode="inter_word"
                android:textColor="@android:color/black"
                android:layout_marginTop="8dp" />


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
