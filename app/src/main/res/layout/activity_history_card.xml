<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        android:backgroundTint="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <!-- Tanggal -->
            <TextView
                android:id="@+id/dateText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Kamis, 23 Mei 2024"
                android:textSize="16sp"
                android:textColor="@color/primary"
                android:fontFamily="@font/poppins_bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/timeText" />

            <!-- Waktu -->
            <TextView
                android:id="@+id/timeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="07.30"
                android:textSize="12sp"
                android:textColor="@color/grey"
                android:fontFamily="@font/poppins"
                app:layout_constraintTop_toTopOf="@id/dateText"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Informasi Moisture -->
            <TextView
                android:id="@+id/moistureLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Moisture"
                android:textSize="14sp"
                android:textColor="@color/primary"
                android:fontFamily="@font/poppins_bold"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/dateText"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/moistureStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_notifikasi"
                android:fontFamily="@font/poppins"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:text="Normal"
                android:textColor="@color/grey"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@+id/moistureLabel"
                app:layout_constraintStart_toStartOf="@+id/moistureLabel"
                app:layout_constraintTop_toBottomOf="@id/moistureLabel" />

            <!-- Informasi Status -->
            <TextView
                android:id="@+id/statusLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="Status"
                android:layout_marginStart="45dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/primary"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@+id/moistureLabel"
                app:layout_constraintTop_toBottomOf="@+id/dateText" />

            <TextView
                android:id="@+id/statusValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_notifikasi"
                android:fontFamily="@font/poppins"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:text="Sudah disiram"
                android:textColor="@color/grey"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@+id/statusLabel"
                app:layout_constraintStart_toStartOf="@+id/statusLabel"
                app:layout_constraintTop_toBottomOf="@+id/statusLabel" />

            <!-- Informasi Kadar Tanah -->
            <TextView
                android:id="@+id/soilPhLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="Kadar Tanah"
                android:layout_marginStart="45dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/primary"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@+id/statusLabel"
                app:layout_constraintTop_toBottomOf="@+id/dateText" />

            <TextView
                android:id="@+id/soilPhValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_notifikasi"
                android:fontFamily="@font/poppins"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:text="7pH"
                android:textColor="@color/grey"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@+id/soilPhLabel"
                app:layout_constraintStart_toStartOf="@+id/soilPhLabel"
                app:layout_constraintTop_toBottomOf="@+id/soilPhLabel" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>
